<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Photo:</strong>
  <%= image_tag(@product.photo) if @product.photo.present? %>
</p>

<p>
  <strong>PDF:</strong>
  <%= link_to "display using the full viewer", pdfjs.minimal_path(file: "#{@product.attachment_file}") if @product.attachment_file.present? %>
</p>

